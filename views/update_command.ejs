<%- include('include/_header')%>


    <!-- Main Site -->
    <main id="site-main">
        <div class="container">
          <div class="box-nav d_flex-justify-between">
            <div class="filter">
              <a href="/"
                ><i class="fas fa-angle-double-left"></i> All Stock Order</a
              >
            </div>
          </div>
          <div class="form-title text-center">
            <h2 class="text-dark">Update Command</h2>
            <span class="text-light"
              >Use the below form to update a new command</span
            >
          </div>
          
          <!-- form update command -->
          <form method="POST" id="update_command">
            <div class="new_command">
              <div class="form-group">
                <label for="name" class="text-light">Name</label>
                <input type="hidden" name="id" value="<%= command._id %>" />
                <input
                  type="text"
                  name="name"
                  value="<%= command.name %>"
                  placeholder="Do Viet Hung"
                />
              </div>
              <div class="form-group">
                <label for="email" class="text-light">Email</label>
                <input
                  type="text"
                  name="email"
                  value="<%= command.email%>"
                  placeholder="dohungdvh@gmail.com"
                />
              </div>
              <div class="form-group">
                <label for="gender" class="text-light">Gender</label>
                <div class="radio inline">
                    <input type="radio" id="radio-2" name="gender" value="Male" <%= command.gender=="Male"?'checked':"" %>>
                    <label for="radio-2" class="radio-label">Male</label>
                </div>
                <div class="radio inline">
                    <input type="radio" id="radio-3" name="gender" value="Female"  <%= command.gender=="Female"?'checked':"" %>>
                    <label for="radio-3" class="radio-label">Female</label>
                </div>
            </div>
        
            <div class="form-group">
                <label for="gender" class="text-light">Status</label>
                <div class="radio inline">
                    <input type="radio" id="radio-4" name="status" value="Active"  <%= command.status=="Active"?'checked':"" %>>
                    <label for="radio-4" class="radio-label">Active</label>
                </div>
                <div class="radio inline">
                    <input type="radio" id="radio-5" name="status" value="Inactive"  <%= command.status=="Inactive"?'checked':"" %>>
                    <label for="radio-5" class="radio-label">Inactive</label>
                </div>
            </div>
        
            <div class="form-group">
                <button type="submit" class="btn text-dark update">Save</button>
            </div>
            </div>
          </form>

        </div>
      </main>


<%- include('include/_footer')%>
